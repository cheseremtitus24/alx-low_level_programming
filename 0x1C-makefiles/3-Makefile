# compiles Top-Down
# Defining Variables

# compiler
CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o) 
NAME=school
RM=rm -rf

.PHONY: all
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)


.PHONY: clean
clean:
	$(RM) *~ $(NAME)
.PHONY: oclean
oclean:
	$(RM) $(OBJ)
# deletes vim temp files, obj and exec files
.PHONY: fclean
fclean:
	$(RM)  $(OBJ) *.c~ $(NAME)
.PHONY: re
re: oclean all
